<h2><%= @articulo.nombre.capitalize %></h2>
<div class="vendedor">
	<div class="fotoArticulo">
	<%= image_tag @articulo.imagenUno(:medium) %>
	</div>
	<div class="reputacion">
		<fieldset style="border:none; height:133px; background-color:#EEEEEE; -webkit-border-radius:6px;">
			<legend><%= link_to @articulo.vendedor.nickname.capitalize, usuario_path(@articulo.vendedor.nickname)%></legend>
			Reputaci&oacute;n: <%= image_tag @articulo.vendedor.reputacion.to_s+'stars.png' %><br/>
			Email: <%= @articulo.vendedor.email %><br/>
			Tiene <%= pluralize(@articulo.cantidad,"articulo") %><br/>
			El articulo se publico hace <%= distance_of_time_in_words_to_now(@articulo.created_at) %><br/>
		</fielset>
	</div>
</div>

<div class="descripcionArticulo">
	<div class="descripcionArriba"></div>
	<div class="descripcionCuerpo">
		<%= @articulo.descripcion %>
	</div>
	<div class="descripcionAbajo"></div>
</div>
