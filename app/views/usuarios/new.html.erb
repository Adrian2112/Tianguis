<h1>Registrate</h1>

<% form_for(@usuario) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  
    <%= f.label :nickname, "Nombre de usuario" %><br />
    <%= f.text_field :nickname %>
  </p>
  <p>
    <%= f.label :usuario_password, 'Password' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :usuario_password_confirmation, "Confirmacion" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :carrera %><br />
    <%= f.text_field :carrera %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p><br />
<% end %>

