<h1>Unete a la venta</h1>

<% form_for (@usuario, :html => { :multipart => true}) do |f| %>

<div>
<%= f.file_field :imagenPerfil %>
</div>

  <div>
	  <%= f.label :nombre, "Nombre" %><br />
    <%= f.text_field :nombre, :placeholder => "Nombre de usuario" %>
		<%= error(@usuario, "nombre") %>
  </div>
	<br />
	<div>
	  <%= f.label :nickname, "Apodo" %><br />
    <%= f.text_field :nickname %>
		<%= error(@usuario, "nickname") %>
  </div>
	<br />
  <div>
		<%= f.label :password, "Password" %><br />
    <%= f.password_field :password %>
		<%= error(@usuario, "password") %>
  </div>
	<br />
  <div>
		<%= f.label :password_confirmation, "Confirmacion" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
	<br />
  <div>
		<%= f.label :email, "Correo Electronico" %><br />
    <%= f.text_field :email %>
		<%= error(@usuario, "email") %>
  </div>
	<br />
  <div>
    <%= f.select :carrera,
             Usuario::CARRERA,
            :prompt => "Selecciona una carrera"%>
		<%= error(@usuario, "carrera") %>
  </div>
	<br />
  <div>
    <%= f.submit 'Registrar' %>
  </div>
	<br />
<% end %>

