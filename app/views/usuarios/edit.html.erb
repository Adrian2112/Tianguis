    <%= f.label :nickname, "Nickname" %><br />
    <%= f.text_field :nickname %>
  </p>
  <p>
    <%= f.label :nombre, "Nombre" %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :apellido_paterno, "Apellido Paterno" %><br />
